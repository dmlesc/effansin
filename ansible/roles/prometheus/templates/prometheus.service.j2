[Unit]
Description=prometheus
After=network.target

[Service]
User=root
ExecStart=/opt/{{ prometheus_ver }}/prometheus -config.file=/opt/{{ prometheus_ver }}/prometheus.yml -storage.local.retention 8760h0m0s 
WorkingDirectory=/opt/{{ prometheus_ver }}
Restart=on-failure

[Install]
WantedBy=multi-user.target
